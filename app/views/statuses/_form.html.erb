<%= form_with(model: status, local: true) do |form| %>
  <% if status.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(status.errors.count, "error") %> prohibited this status from being saved:</h2>

      <ul>
      <% status.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :status_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :status_description %>
  </div>

  <div class="field">
    <%= form.label :done %>
    <%= form.check_box :done, id: :status_done %>
  </div>

  <div class="field">
    <%= form.label :bootstrap_color %>
    <%= form.select :bootstrap_color,
      options_for_select(bootstrap_colors_helper), id: :status_bootstrap_color %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
