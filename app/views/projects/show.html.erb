<% unless notice.nil? %>
<p id="notice" class='alert alert-primary' role='alert'>
  <%= notice %>
  <span aria-hidden="true">&times;</span>
</p>
<% end %>

<H1> <%= @project.name %> </H1>

<div class='card-deck'>
  <div class='card card-description'>
    <div class='card-body'>
      <h4 class='card-title'>
        Description:
      </h4>
      <p class='card-text'>
        <%= @project.description %>
      </p>
    </div>
    <div class='card-controlls'>
      <button class="btn btn-primary btn-small" data-toggle='modal'
        data-target='#newTaskModal'>
        Add a Task
      </button>
      <%= new_task_modal project: @project %>
      <%= link_to fa_icon('edit'), edit_project_path(@project),
        class: 'pull-right text-muted' %>
    </div>

  </div>
  <div class='card border-primary card-goal'>
    <h4 class='card-header'> Goal </h4>
    <div class='card-body'>
      <div class='card-text text-primary'>
        <%= @project.goal %>
      </div>
    </div>
  </div>

</div>
</br>
<ul class="nav nav-tabs" id="project-tabs" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="current-tab" data-toggle="tab"
      href="#current" role="tab" aria-controls="current"
      aria-selected="true">Focusing on</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="new-tab" data-toggle="tab"
      href="#new" role="tab" aria-controls="new" aria-selected="false">
      New tasks
      <span class="badge badge-pill badge-primary">
        <%= @project.tasks.select {|t|!t.status.done and t.status.name == 'New'}.count%>
      </span>
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact"
      role="tab" aria-controls="contact" aria-selected="false">Contact</a>
  </li>
</ul>

<div class="tab-content" id="TabsContent">
  <div class="tab-pane fade show active" id="current" role="tabpanel"
    aria-labelledby="current-tab">
    </br>
    <%= get_tasks_listing @project.tasks.select{|t|!t.status.done and t.status.name != 'New'} %>
  </div>
  <div class="tab-pane fade" id="new" role="tabpanel"
    aria-labelledby="profile-tab">
    </br>
    <%= get_tasks_listing @project.tasks.select{|t|!t.status.done and t.status.name == 'New'} %>
  </div>
  <div class="tab-pane fade" id="contact" role="tabpanel"
    aria-labelledby="contact-tab">
  </div>
</div>

