<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from
        being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :project %>
    <%= form.collection_select :project_id, Project.all, :id, :name,
      {id: :task_project }, {class: 'custom-select'} %>
  </div>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :task_title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :task_description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :priority %>
    <%= form.number_field :priority, id: :task_priority, min: 0, max: 9, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.collection_select :status_id, Status.all, :id, :name,
      {id: :task_status}, class: 'custom-select' %>
  </div>

  <div class="form-group">
    <%= form.label :effort %>
    <%= form.collection_select :effort_id, Effort.all, :id, :name,
      {id: :task_effort}, class: 'custom-select'%>
  </div>

  <div class="form-group">
    <%= form.label :parent %>
    <%= form.collection_select :parent_id, Task.all, :id, :title,
      {id: :task_parent, prompt: true}, class: 'custom-select'%>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
